@model IEnumerable<LockerManagementSystem.Models.LockerRequest>

@{
    ViewData["Title"] = "Admin Dashboard - UC Banilad";
}

<div class="row">
    <div class="col-12">
        <div class="uc-card">
            <div class="uc-card-header">
                <h3 class="mb-0"><i class="fas fa-tachometer-alt me-2"></i>Locker Requests Administration</h3>
                <small class="opacity-75">University of Cebu Banilad</small>
            </div>
            <div class="card-body">
                <!-- Statistics Cards -->
                <div class="row mb-4">
                    <div class="col-md-3 mb-3">
                        <div class="uc-stat-card text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>@Model.Count()</h4>
                                        <p>Total Requests</p>
                                    </div>
                                    <div>
                                        <i class="fas fa-list fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="uc-stat-card text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>@Model.Count(r => r.Status == "Pending")</h4>
                                        <p>Pending</p>
                                    </div>
                                    <div>
                                        <i class="fas fa-clock fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="uc-stat-card text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>@Model.Count(r => r.Status == "Approved")</h4>
                                        <p>Approved</p>
                                    </div>
                                    <div>
                                        <i class="fas fa-check-circle fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="uc-stat-card text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h4>@Model.Count(r => r.Status == "Rejected")</h4>
                                        <p>Rejected</p>
                                    </div>
                                    <div>
                                        <i class="fas fa-times-circle fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Requests Table -->
                <div class="table-responsive">
                    <table class="table table-hover table-uc">
                        <thead>
                            <tr>
                                <th><i class="fas fa-user me-1"></i>Name</th>
                                <th><i class="fas fa-id-card me-1"></i>ID Number</th>
                                <th><i class="fas fa-archive me-1"></i>Locker</th>
                                <th><i class="fas fa-calendar me-1"></i>Semester</th>
                                <th><i class="fas fa-phone me-1"></i>Contact</th>
                                <th><i class="fas fa-calendar-day me-1"></i>Date</th>
                                <th><i class="fas fa-status me-1"></i>Status</th>
                                <th><i class="fas fa-actions me-1"></i>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in Model)
                            {
                                <tr>
                                    <td class="fw-bold">@request.Name</td>
                                    <td>@request.IdNumber</td>
                                    <td><span class="badge badge-uc">@request.LockerNumber</span></td>
                                    <td>@request.Semester</td>
                                    <td>@request.ContactNumber</td>
                                    <td>@request.SubmissionDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <span class="badge @(request.Status == "Approved" ? "bg-success" : 
                                                      request.Status == "Rejected" ? "bg-danger" : "bg-warning")">
                                            @request.Status
                                        </span>
                                    </td>
                                    <td>
                                        @if (request.Status == "Pending")
                                        {
                                            <div class="btn-group btn-group-sm">
                                                <form method="post" asp-action="Approve" class="d-inline">
                                                    <input type="hidden" name="id" value="@request.Id" />
                                                    <button type="submit" class="btn btn-success" title="Approve">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                </form>
                                                <form method="post" asp-action="Reject" class="d-inline">
                                                    <input type="hidden" name="id" value="@request.Id" />
                                                    <button type="submit" class="btn btn-danger" title="Reject">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        }
                                        else
                                        {
                                            <small class="text-muted">Approved by: @request.Approver</small>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Confirm actions
    $(document).ready(function() {
        $('form').on('submit', function() {
            return confirm('Are you sure you want to perform this action?');
        });
    });
</script>