@model LockerManagementSystem.Models.LockerRequest

@{
    ViewData["Title"] = "Locker Request Form - UC Banilad";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="uc-card">
            <div class="uc-card-header">
                <h2 class="mb-0"><i class="fas fa-lock me-2"></i>LOCKER REQUEST FORM</h2>
                <small class="opacity-75">University of Cebu Banilad</small>
            </div>
            <div class="card-body p-4">
                <form asp-action="RequestForm" method="post" enctype="multipart/form-data" id="lockerForm">
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label fw-bold">NAME</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input asp-for="Name" class="form-control" placeholder="Enter your full name" required />
                            </div>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="IdNumber" class="form-label fw-bold">ID NUMBER</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                                <input asp-for="IdNumber" class="form-control" placeholder="Enter your ID number" required />
                            </div>
                            <span asp-validation-for="IdNumber" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="LockerNumber" class="form-label fw-bold">LOCKER NUMBER</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-archive"></i></span>
                                <input asp-for="LockerNumber" class="form-control" placeholder="e.g., L-17" required />
                            </div>
                            <span asp-validation-for="LockerNumber" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Semester" class="form-label fw-bold">SEMESTER</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                <select asp-for="Semester" class="form-control" required>
                                    <option value="">Select Semester</option>
                                    <option value="1st Semester">1st Semester</option>
                                    <option value="2nd Semester">2nd Semester</option>
                                    <option value="Summer">Summer</option>
                                </select>
                            </div>
                            <span asp-validation-for="Semester" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ContactNumber" class="form-label fw-bold">CONTACT NUMBER</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-phone"></i></span>
                            <input asp-for="ContactNumber" class="form-control" placeholder="e.g., 09524653246" required />
                        </div>
                        <span asp-validation-for="ContactNumber" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="StudyLoadDocument" class="form-label fw-bold">ATTACHED STUDY LOAD AND REGISTRATION</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-file-upload"></i></span>
                            <input asp-for="StudyLoadDocument" type="file" class="form-control" accept=".pdf,.jpg,.jpeg,.png" />
                        </div>
                        <small class="form-text text-muted">Supported formats: PDF, JPG, PNG (Max: 5MB)</small>
                    </div>

                    <div class="mb-4">
                        <div class="form-check">
                            <input asp-for="AcceptTerms" class="form-check-input" required />
                            <label asp-for="AcceptTerms" class="form-check-label fw-bold">
                                I accept the Terms of Service
                            </label>
                        </div>
                        <span asp-validation-for="AcceptTerms" class="text-danger small"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-uc btn-lg px-5">
                            <i class="fas fa-paper-plane me-2"></i>Submit Request
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
    <script>
        // Real-time form validation feedback
        $(document).ready(function() {
            $('input, select').on('blur', function() {
                if ($(this).val().trim() !== '') {
                    $(this).addClass('is-valid').removeClass('is-invalid');
                } else {
                    $(this).addClass('is-invalid').removeClass('is-valid');
                }
            });
        });
    </script>
}